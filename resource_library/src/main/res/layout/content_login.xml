    <!--</android.support.constraint.ConstraintLayout>-->

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="luluteam.yjy.studentclient.activity.LoginActivity">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp">   <!--android:layout_centerVertical="true"-->
            <ImageView
                android:id="@+id/logo"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@{login_model.logo}"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/usernameet"
                android:hint="账号"
                android:layout_marginTop="40dp"
                android:background="@drawable/edittextstyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@{login_model.account}"
                android:maxLines="1"
                android:layout_below="@+id/logo"
                android:paddingLeft="15dp" />

            <EditText
                android:id="@+id/passwordet"
                android:hint="密码"
                android:background="@drawable/edittextstyle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/usernameet"
                android:layout_marginTop="10dp"
                android:inputType="textPassword"
                android:text="@{login_model.password}"
                android:maxLines="1"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/loginbtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:background="@drawable/greenroundcornerbtn"
                android:layout_below="@+id/passwordet" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/setting"
            android:src="@drawable/setting"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp" />
    </RelativeLayout>
</layout>